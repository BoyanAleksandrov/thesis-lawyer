@model List<Chat>

@{
    
}
<h2 class="text-center mb-5">Chat History</h2>
<table class="table">
    <thead>
    <tr>
        <th>Id</th>
        <th>Email</th>
      
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.Id
            </td>
            <td>
                @item.User.Email
            </td>
        
            <td style="white-space: nowrap">
<a class="btn btn-primary btn-sm" href="@Url.Action("chatlawyer", "Chat", new { chatId = item.Id })">Chat Now</a>

            </td>
        </tr>
    }
    </tbody>
</table>