@using Microsoft.AspNetCore.Identity
@using thesis_lawyer.Data
@inject SignInManager<UserModel> SignInManager
@inject UserManager<UserModel> UserManager

@{
    ViewData["Title"] = "Chat-Lawyer";
}

<!DOCTYPE html>
<html lang="en" style="scroll-behavior: smooth">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css"
          integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/chat.css">
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet"/>
    <script src="js/site.js"></script>
    <title>Mr.Lawyer</title>
</head>
<body>

<nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top" style="z-index: 2000;">
    <a class="navbar-brand" href="/" style="font-size: 30px; color: #4495cb;"><b b-q1wspa50lt="">Mr. Lawyer</b></a>
    <div class="collapse navbar-collapse" id="navbarNavDropdown" bis_skin_checked="1">
        <ul class="navbar-nav ml-auto">
            <li class="nav-item px-3">
                <li class="nav-item px-3">
                    <a href="/history/list" class="btn btn-primary" style="background-color: #4495cb; width: auto">History</a>
                </li>
            </li>
        </ul>
    </div>
</nav>

<div class="container fixed-top">
    <div class="row">
        <div class="col-sm-2 thirty fixed-top">
            <div class="row flex-nowrap">
                <div class="col-auto col-md-3 col-xl-2 px-sm-2 px-0 bg-transparent">
                    <div class="d-flex flex-column align-items-center px-3 pt-2 text-body min-vh-100"
                         style="margin-top: 40px;float:right;">
                        <ul class="nav nav-pills flex-column mb-5 mb-0 align-items-center mt-5"
                            id="menu">
                        </ul>
                        <hr>
                        @if (SignInManager.IsSignedIn(User) && User.Identity.IsAuthenticated)
                        {
                            <div class="dropdown fixed-bottom pl-4">
                                @{
                                    var firstName = "";
                                    var user = await UserManager.GetUserAsync(User);
                                    firstName = user.FirstName;
                                }
                                <a href="#" class="d-flex align-items-center text-body text-decoration-none "
                                   id="dropdownUser1"
                                   aria-expanded="false">
                                    <img src="https://icons.veryicon.com/png/o/internet--web/website-common-icons/user-user-1.png" alt="hugenerd" width="30" height="30"
                                         class="rounded-circle">
                                    <span class="d-none d-sm-inline mx-1">@firstName</span>
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-10 seventy" style="top: 210px;margin-left: 15%;">
            <div class="chat_window bg-transparent">
                <form onsubmit="return false;">
                    <div class="top_menu">
                        <div class="title">Chat</div>
                    </div>

                    <div class="messages">
                        @if (Model != null)
                        {

                            @foreach (var message in Model)
                            {
                                if (message.Category == "received")
                                {
                                    <div class="message left appeared">
                                        <div class="avatar"></div>
                                        <div class="text_wrapper">
                                            <div class="text">@message.Message</div>
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <div class="message right appeared">
                                        <div class="avatar"></div>
                                        <div class="text_wrapper">
                                            <div class="text">@message.Message</div>
                                        </div>
                                    </div>
                                }

                            }
                        }
                        
                            </div>
                    
                    <div class="bottom_wrapper clearfix">
                        <div class="message_input_wrapper">
                            <input class="message_input bg-transparent" type="text" name="message" placeholder="Type your message here..."/>
                        </div>
                        <div class="send_message">
                            <div class="icon"></div>
                            <div class="text">Send</div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
        integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
        crossorigin="anonymous"></script>

<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
        integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
        crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.3/dist/umd/popper.min.js"
        integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49"
        crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/js/bootstrap.min.js"
        integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy"
        crossorigin="anonymous"></script>
</body>
</html>
